<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="73dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cate_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle_btn_shape"
        android:outlineProvider="none"
        android:padding="12dp"
        android:src="@drawable/e_receipt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cate_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="전자영수증"
        android:textColor="#656565"
        android:textSize="9dp"
        app:layout_constraintEnd_toEndOf="@+id/cate_img"
        app:layout_constraintStart_toStartOf="@+id/cate_img"
        app:layout_constraintTop_toBottomOf="@+id/cate_img" />
</androidx.constraintlayout.widget.ConstraintLayout>